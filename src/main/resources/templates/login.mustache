{{>layout/header}}

<style>
    .login-container {
        max-width: 400px;
        margin: 80px auto;
    }
    .form-control {
        padding: 12px 15px;
        border-radius: 8px;
        background-color: #f8f9fa;
        border: 1px solid #eee;
    }
    .form-control:focus {
        background-color: #fff;
        border-color: #333;
        box-shadow: none;
    }
    .btn-login {
        padding: 12px;
        font-weight: 700;
        border-radius: 8px;
    }
</style>

<div class="container login-container">
    <div class="text-center mb-5">
        <h2 class="fw-bold">LOGIN</h2>
        <p class="text-muted small">2040 SHOP에 오신 것을 환영합니다.</p>
    </div>

    <script>
        const urlParams = new URLSearchParams(window.location.search);
        if (urlParams.get('error')) {
            document.write('<div class="alert alert-danger text-center small p-2 mb-3">아이디 또는 비밀번호를 확인해주세요.</div>');
        }
    </script>

    <div class="card border-0 shadow-sm p-4 rounded-4 bg-white">
        <form action="/login" method="post">
            <div class="mb-3">
                <input type="email" name="email" class="form-control" placeholder="이메일 아이디 입력" required>
            </div>
            <div class="mb-4">
                <input type="password" name="password" class="form-control" placeholder="비밀번호 입력" required>
            </div>

            <div class="d-grid gap-2">
                <button type="submit" class="btn btn-dark btn-login">로그인</button>
            </div>
        </form>

        <div class="text-center mt-4">
            <a href="/join" class="text-decoration-none text-muted small">회원가입</a>
            <span class="mx-2 text-muted small">|</span>
            <a href="#" class="text-decoration-none text-muted small" onclick="alert('준비 중인 기능입니다.');">비밀번호 찾기</a>
        </div>
    </div>
</div>

{{>layout/footer}}