{{>layout/header}}

<div class="container mt-5" style="max-width: 700px;">
    <h3 class="fw-bold mb-4">배송지 관리</h3>

    <div class="card border-0 shadow-sm p-4 mb-4 bg-light rounded-4">
        <h6 class="fw-bold mb-3">+ 새 배송지 추가</h6>
        <form action="/shipping/add" method="post">
            <div class="row g-2 mb-2">
                <div class="col-md-4">
                    <input type="text" name="addressName" class="form-control" placeholder="배송지명 (예: 우리집)" required>
                </div>
                <div class="col-md-8">
                    <input type="text" name="fullAddress" class="form-control" placeholder="주소" required>
                </div>
            </div>
            <div class="input-group mb-2">
                <input type="text" name="detailAddress" class="form-control" placeholder="상세주소 (동, 호수)" required>
                <button class="btn btn-dark" type="submit">추가</button>
            </div>
        </form>
    </div>

    <div class="list-group">
        {{#addresses}}
            <div class="list-group-item border-0 shadow-sm mb-3 rounded-3 p-3">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <span class="badge bg-primary mb-1">{{addressName}}</span>
                        <h6 class="mb-0 fw-bold">{{fullAddress}}</h6>
                        <small class="text-muted">{{detailAddress}}</small>
                    </div>
                    <form action="/shipping/delete" method="post">
                        <input type="hidden" name="addressId" value="{{id}}">
                        <button type="submit" class="btn btn-outline-danger btn-sm" onclick="return confirm('삭제하시겠습니까?')">삭제</button>
                    </form>
                </div>
            </div>
        {{/addresses}}

        {{^addresses}}
            <div class="text-center py-5 text-muted">등록된 배송지가 없습니다.</div>
        {{/addresses}}
    </div>
</div>

{{>layout/footer}}