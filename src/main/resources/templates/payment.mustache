{{>layout/header}}

<style>
    /* 카드 디자인 스타일 */
    .credit-card {
        border-radius: 15px;
        padding: 25px;
        color: white;
        height: 180px;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        box-shadow: 0 10px 20px rgba(0,0,0,0.15);
        transition: transform 0.2s;
        position: relative;
    }
    .credit-card:hover { transform: translateY(-5px); }

    /* 배경색 옵션 */
    .bg-gradient-primary { background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); }
    .bg-gradient-dark { background: linear-gradient(135deg, #232526 0%, #414345 100%); }
    .bg-gradient-success { background: linear-gradient(135deg, #11998e 0%, #38ef7d 100%); }
    .bg-gradient-warning { background: linear-gradient(135deg, #fce38a 0%, #f38181 100%); color: #333; }

    .card-chip {
        width: 40px; height: 30px;
        background: linear-gradient(135deg, #fce38a 0%, #bf953f 100%);
        border-radius: 5px;
        margin-bottom: 10px;
    }
    .card-number { font-size: 20px; letter-spacing: 2px; font-family: monospace; }
    .card-holder { font-size: 14px; opacity: 0.9; }
    .card-logo { font-weight: 800; font-size: 18px; font-style: italic; text-align: right; }

    .btn-delete-card {
        position: absolute; top: 15px; right: 15px;
        background: rgba(0,0,0,0.2); border: none; color: white;
        width: 30px; height: 30px; border-radius: 50%;
    }
</style>

<div class="container mt-5" style="max-width: 900px;">
    <h3 class="fw-bold mb-4">결제수단 관리</h3>

    <div class="row g-4">
        {{#cards}}
            <div class="col-md-6 col-lg-4">
                <div class="credit-card {{colorStyle}}">
                    <form action="/payment/delete" method="post" onsubmit="return confirm('카드를 삭제하시겠습니까?');">
                        <input type="hidden" name="cardId" value="{{id}}">
                        <button class="btn-delete-card">✕</button>
                    </form>

                    <div>
                        <div class="card-logo">{{cardCompany}}</div>
                        <div class="card-chip"></div>
                    </div>

                    <div class="card-number">{{cardNumber}}</div>

                    <div class="d-flex justify-content-between align-items-end">
                        <div class="card-holder">{{cardNickname}}</div>
                        <div style="font-size: 24px;"><i class="fab fa-cc-visa"></i></div>
                    </div>
                </div>
            </div>
        {{/cards}}

        <div class="col-md-6 col-lg-4">
            <div class="credit-card bg-light border text-dark d-flex align-items-center justify-content-center"
                 style="border: 2px dashed #ddd !important; cursor: pointer; color: #aaa;"
                 data-bs-toggle="modal" data-bs-target="#addCardModal">
                <div class="text-center">
                    <i class="fas fa-plus-circle fs-1 mb-2"></i>
                    <div>새 카드 등록</div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="addCardModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content rounded-4 border-0">
            <div class="modal-header border-0 pb-0">
                <h5 class="modal-title fw-bold">카드 정보 입력</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body p-4">
                <form action="/payment/add" method="post">
                    <div class="mb-3">
                        <label class="form-label small fw-bold">카드사 선택</label>
                        <select class="form-select" name="cardCompany">
                            <option value="Visa">Visa</option>
                            <option value="Mastercard">Mastercard</option>
                            <option value="Shinhan">신한카드</option>
                            <option value="Hyundai">현대카드</option>
                            <option value="Samsung">삼성카드</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label class="form-label small fw-bold">카드 번호</label>
                        <input type="text" name="cardNumber" class="form-control" placeholder="0000-0000-0000-0000" required>
                    </div>
                    <div class="mb-4">
                        <label class="form-label small fw-bold">카드 별칭</label>
                        <input type="text" name="cardNickname" class="form-control" placeholder="예: 생활비 카드" required>
                    </div>
                    <div class="d-grid">
                        <button type="submit" class="btn btn-dark btn-lg rounded-3">카드 등록 완료</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

{{>layout/footer}}