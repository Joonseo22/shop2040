{{>layout/header}}

<div class="container mt-5" style="max-width: 600px;">
    <h3 class="text-center mb-4 fw-bold">⚙️ 회원 정보 수정</h3>

    <div class="card p-4 border-0 shadow-sm rounded-4">
        <form action="/my-info/update" method="post">
            <input type="hidden" name="id" value="{{member.id}}">

            <div class="mb-3">
                <label class="form-label fw-bold small">아이디 (이메일)</label>
                <input type="email" class="form-control bg-light" value="{{member.email}}" readonly>
            </div>

            <div class="mb-3">
                <label class="form-label fw-bold small">닉네임 (이름)</label>
                <input type="text" name="name" class="form-control" value="{{member.name}}">
            </div>

            <div class="mb-4">
                <label class="form-label fw-bold small">비밀번호 변경</label>
                <input type="text" name="password" class="form-control" value="{{member.password}}">
                <div class="form-text">변경을 원치 않으시면 그대로 두세요.</div>
            </div>

            <div class="d-grid gap-2">
                <button type="submit" class="btn btn-dark btn-lg">정보 수정 완료</button>
            </div>
        </form>

        <hr class="my-4">

        <div class="d-grid gap-2">
            <a href="/shipping" class="btn btn-outline-primary">배송지 관리 바로가기</a>
        </div>

        <div class="text-end mt-4">
            <form action="/withdraw" method="post" onsubmit="return confirm('정말로 탈퇴하시겠습니까? 모든 데이터가 삭제됩니다.');">
                <button type="submit" class="btn btn-link text-danger text-decoration-none small">회원 탈퇴</button>
            </form>
        </div>
    </div>
</div>

{{>layout/footer}}